{
  "name": "TeamMusic",
  "version": "0.0.1",
  "license": "MIT",
  "description": "TeamMusic for PC",
  "author": "zalnaRs <thezalnar@hotmail.com>",
  "release": "build",
  "main": "main.js",
  "homepage": "http://teammusic.web.app/",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "win-dist": "electron-builder --win",
    "linux-dist": "electron-builder --linux",
    "mac-dist": "electron-builder --mac",
    "dist": "electron-builder --publish always"
  },
  "build": {
    "appId": "tw.music.streamer",
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "zalnaRs",
        "repo": "https://github.com/zalnaRs/teammusic-pc",
        "publishAutoUpdate": "true",
        "private": "true"
      }
    ]
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^22.7.0"
  }
}
